    @ApiResponses({
        @ApiResponse(code = 200, message = "Success", response = <%= @entity.name.capitalize %>DTO.class),
        @ApiResponse(code = 400, message = "Bad request", response = MessageDTO.class),
        @ApiResponse(code = 404, message = "Not found", response = MessageDTO.class)
    })
    public <%= @entity.name.capitalize %>DTO update(
            @ApiParam(required = true, name = "<%= @entity.name.downcase %>", value = "")
            @Valid @RequestBody <%= @entity.name.capitalize %>DTO dto) {
        return service.salva(dto);
    }

    @RequestMapping(value = "/{<%= @entity.primary_key[:name] %>}", method = RequestMethod.GET, produces = MediaType.APPLICATION_JSON_VALUE)
    @ApiOperation(value = "Visualizza <%= @entity.name.capitalize %>", notes = "Visualizza una <%= @entity.name.capitalize %> esistente", response = <%= @entity.name.capitalize %>DTO.class)
    @ApiResponses({
        @ApiResponse(code = 200, message = "Success", response = <%= @entity.name.capitalize %>DTO.class),
        @ApiResponse(code = 400, message = "Bad request", response = MessageDTO.class),
        @ApiResponse(code = 404, message = "Not found", response = MessageDTO.class)
    })
    public <%= @entity.name.capitalize %>DTO show(
            @ApiParam(required = true, name = "<%= @entity.primary_key[:name] %>", value = "ID della <%= @entity.name.capitalize %> che si vuole aggiornare", defaultValue = "0")
            @PathVariable <%= @entity.primary_key[:type] %> <%= @entity.primary_key[:name] %>) {
        return service.trova(<%= @entity.primary_key[:name] %>);
    }

