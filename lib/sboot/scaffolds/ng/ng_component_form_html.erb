<div class="jumbotron">
  <h2><%= @entity.single_capitalize -%> Form:</h2>
  <form novalidate #form="ngForm" (submit)="save<%= @entity.single_capitalize  -%>()">
    <% @entity.properties.each do |property| -%>
      <div class="form-group">
        <label for="<%= property.name %>-id"><%= property.name %></label>
        <input type="text" id="<%= property.name %>-id" name="<%= property.name  %>" [(ngModel)]="<%= @entity.single_downcase  -%>.<%= property.name  %>" required #<%= property.name  %>="ngModel">
        <span *ngIf="<%= property.name  %>.hasError('required')">obbligatorio</span>
      </div>
    <% end -%>
    <div class="form-group">
      <button class="btn btn-default" type="submit">Salva</button>
      <button class="btn btn-default" routerLink="/<%= @entity.collection_downcase -%>">Indietro</button>
    </div>
  </form>
</div>
