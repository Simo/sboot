package <%= @package %>.business.dtos;

import <%= @package %>.persistence.entities.<%= @name.split('_').collect(&:capitalize).join %>;

public class <%= @name.split('_').collect(&:capitalize).join %>DTO {

    private Long id;
    <% @properties.each do |property| %>
    private <%= property[:type] %> <%= property[:name] %>;
    <% end %>

    public <%= @name.split('_').collect(&:capitalize).join %>DTO(){}

    public <%= @name.split('_').collect(&:capitalize).join %>DTO(<%= @name.split('_').collect(&:capitalize).join %> entity){
        this.id = entity.getId();
				<% @properties.each do |property| -%>
		    this.<%= property[:name] %> = entity.get<%= property[:name].capitalize %>();
		    <% end -%>
    }

    public <%= @name.split('_').collect(&:capitalize).join %> convert(){
        <%= @name.split('_').collect(&:capitalize).join %> entity = new <%= @name.split('_').collect(&:capitalize).join %>();
        entity.setId(this.id);
				<% @properties.each do |property| -%>
		    entity.set<%= property[:name].capitalize %>(this.<%= property[:name] %>);
		    <% end -%>
        return entity;
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    <% @properties.each do |property| -%>
    public <%= property[:type] %> get<%= property[:name].capitalize %>() {
        return <%= property[:name] %>;
    }

    public void set<%= property[:name].capitalize %>(<%= property[:type] %> <%= property[:name] %>) {
        this.<%= property[:name] %> = <%= property[:name] %>;
    }

		<% end -%>
}
